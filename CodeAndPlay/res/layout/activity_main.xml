<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="7"
    android:background="#FAD7D7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/menu3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/slika3" />

    <Button
        android:id="@+id/cookAndCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#99000000"
        android:text="COOK AND CODE"
        android:layout_marginBottom="280dip"
        android:layout_gravity="center_horizontal|bottom"
        android:padding="26dip"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textColor="#3EA696"

        />


    <Button
        android:id="@+id/areYouForIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="ARE YOU FOR IT?"
        android:layout_marginBottom="210dip"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#99000000"
        android:padding="15dip"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textColor="#3EA696"

        />




    <Button
        android:id="@+id/tryYourself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="TRY YOURSELF"
        android:layout_marginBottom="100dip"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#99000000"
        android:padding="30dip"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textColor="#3EA696"

        />


    <Button
        android:id="@+id/learnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="LEARN MORE"
        android:layout_marginBottom="30dip"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#99000000"
        android:padding="13dip"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textColor="#3EA696"
        />



</FrameLayout>
