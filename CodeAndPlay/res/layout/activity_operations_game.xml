<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coding"
    android:id="@+id/backArim"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:focusableInTouchMode="false"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:focusable="true"
            android:text="Do some arithmetic operations"
            android:textColor="#0077B3"
            android:textIsSelectable="false"
            android:textSize="25dp"
            android:textStyle="bold|italic" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="int main()"
                android:textSize="20dp"
                android:visibility="invisible"
                android:textColor="#5b5b5b" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/a"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="  int a ="
                    android:textSize="20dp"
                    android:visibility="invisible"
                    android:textColor="#5b5b5b" />

                <EditText
                    android:id="@+id/aEdit"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:textColor="#5b5b5b" />

                <TextView
                    android:id="@+id/aSecond"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text=";"
                    android:textSize="20dp"
                    android:visibility="invisible"
                    android:textColor="#5b5b5b" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/b"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="  int b ="
                    android:textSize="20dp"
                    android:visibility="invisible"
                    android:textColor="#5b5b5b" />

                <EditText
                    android:id="@+id/bEdit"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:textColor="#5b5b5b" />

                <TextView
                    android:id="@+id/bSecond"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text=";"
                    android:textSize="20dp"
                    android:visibility="invisible"
                    android:textColor="#5b5b5b" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/c"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="  int c = a "
                    android:textSize="20dp"
                    android:visibility="invisible"
                    android:textColor="#5b5b5b" />

                <EditText
                    android:id="@+id/cEdit"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:textColor="#5b5b5b" />

                <TextView
                    android:id="@+id/cSecond"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text=" b;"
                    android:textSize="20dp"
                    android:visibility="invisible"
                    android:textColor="#5b5b5b" />
            </LinearLayout>

            <TextView
                android:id="@+id/printf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  printf(''c = %d'', c);"
                android:textSize="20dp"
                android:visibility="invisible"
                android:textColor="#5b5b5b" />

            <TextView
                android:id="@+id/return0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="return 0;"
                android:textSize="20dp"
                android:visibility="invisible"
                android:textColor="#5b5b5b" />

            <Button
                android:id="@+id/okButton"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:text="ok"
                android:textColor="#5b5b5b" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <Button
                android:id="@+id/aButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="int a = "
                android:textColor="#5b5b5b"
                android:background="#66ffcce6"/>

            <Button
                android:id="@+id/printfButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="printf(''c = %d'', c);"
                android:textColor="#5b5b5b"
                android:background="#66ffcce6"
                android:layout_marginTop="2dp"/>

            <Button
                android:id="@+id/cButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="int c = a ? b;"
                android:textColor="#5b5b5b"
                android:background="#66ffcce6"
                android:layout_marginTop="2dp"/>

            <Button
                android:id="@+id/return0Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="return 0;"
                android:textColor="#5b5b5b"
                android:background="#66ffcce6"
                android:layout_marginTop="2dp"/>

            <Button
                android:id="@+id/bButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="int b = "
                android:textColor="#5b5b5b"
                android:background="#66ffcce6"
                android:layout_marginTop="2dp"/>

            <Button
                android:id="@+id/mainButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="int main()"
                android:textColor="#5b5b5b"
                android:background="#66ffcce6"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#000000"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="Terminal:"
            android:textColor="#00ffff"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/cTerm"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:textColor="#00ffff"
            android:textSize="20dp"
            android:visibility="invisible" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enter value for a, b, and operation you want to do, and then click OK."
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="30dp"
            android:text="THE END"
            android:textStyle="bold|italic" />

    </LinearLayout>


</LinearLayout>

