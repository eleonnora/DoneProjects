<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coding"
    android:id="@+id/back"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:focusableInTouchMode="false"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:focusable="true"
            android:text="Say Hello"
            android:textColor="#0077b3"
            android:textIsSelectable="false"
            android:textSize="25dp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="int main()"
                android:textSize="20dp"
                android:visibility="invisible"
                android:textColor="#5b5b5b" />


            <TextView
                android:id="@+id/printf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="  printf(''Hello!'');"
                android:textSize="20dp"
                android:visibility="invisible"
                android:textColor="#5b5b5b" />

            <TextView
                android:id="@+id/return0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="return 0;"
                android:textSize="20dp"
                android:visibility="invisible"
                android:textColor="#5b5b5b" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <Button
                android:id="@+id/printfButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:background="#66ffcce6"
                android:text="printf(''Hello!'');"
                android:textColor="#5b5b5b" />

            <Button
                android:id="@+id/return0Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#66ffcce6"
                android:text="return 0;"
                android:textColor="#5b5b5b" />

            <Button
                android:id="@+id/mainButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#66ffcce6"
                android:text="int main()"
                android:textColor="#5b5b5b" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:background="#000000"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="Terminal:"
            android:textColor="#00ffff"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/helloTerm"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="\n     >> Hello!"
            android:textColor="#00ffff"
            android:textSize="20dp"
            android:visibility="invisible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Guess the order of buttons to make program."
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            android:text="next program"
            android:background="#33000000"
            android:textStyle="bold|italic" />

    </LinearLayout>


</LinearLayout>

